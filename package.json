{
  "name": "ben-mix-s-blog",
  "version": "1.0.0",
  "private": true,
  "description": "ben-mix-s-blog",
  "author": "BenMix",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next --turbopack",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "notion-to-md": "dotenvx run -- npx tsx scripts/blogs-markdown-gen.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "^15.2.1",
    "nextra": "^4.2.16",
    "nextra-theme-blog": "^4.2.16",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.38.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.22.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "pagefind": "^1.3.0",
    "prettier": "^3.5.2",
    "stylelint": "^16.15.0",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}
