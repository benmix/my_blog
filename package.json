{
  "name": "ben-mix-s-blog",
  "version": "1.0.0",
  "private": true,
  "description": "ben-mix-s-blog",
  "author": "BenMix",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next --turbopack",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --check .",
    "format:write": "oxfmt .",
    "format:tw": "prettier --write \"src/**/*.{js,jsx,ts,tsx,md,mdx}\"",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "notion-to-md": "dotenvx run -- npx tsx scripts/md-blogs-gen.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@notionhq/client": "^5.4.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@remixicon/react": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.556.0",
    "next": "^16.0.7",
    "next-themes": "^0.4.6",
    "next-view-transitions": "^0.3.5",
    "nextra": "^4.6.1",
    "notion-to-md": "^3.1.9",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "file-type": "^21.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.8.0",
    "oxlint": "^0.9.10",
    "pagefind": "^1.4.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^6.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix",
      "oxfmt",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}
